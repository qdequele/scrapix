# Proxy Server Configuration

# Port for proxy traffic (default: 8080)
PROXY_PORT=8080

# Port for management API (default: 3000)
PORT=3000

# Authentication Configuration
# Enable authentication (default: false)
PROXY_AUTH_ENABLED=true

# Basic Authentication (optional)
PROXY_AUTH_USERNAME=admin
PROXY_AUTH_PASSWORD=secure_password_here

# Token Authentication (optional)
# You can use either basic auth, token auth, or both
PROXY_AUTH_TOKEN=your_secret_token_here

# Fly.io region (auto-detected when deployed)
# FLY_REGION=local